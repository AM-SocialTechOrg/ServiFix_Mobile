<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LogInActivity"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white"
    android:gravity="center_vertical|center_horizontal">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/screwdriver_wrench_solid"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido a ServiFix"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16dp"
        android:textColor="#747474"
        android:layout_margin="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa a tu cuenta"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_regular"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo electrónico"
        android:fontFamily="@font/roboto_regular"
        android:padding="16dp"
        android:textColorHint="#A0A0A0"
        android:layout_marginTop="16dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:background="@drawable/edit_text_border"
        />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:fontFamily="@font/roboto_regular"
        android:padding="16dp"
        android:textColorHint="#A0A0A0"
        android:layout_marginTop="16dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:background="@drawable/edit_text_border"
        android:drawableRight="@drawable/baseline_visibility_off_24"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:fontFamily="@font/roboto_regular"
        android:textSize="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:backgroundTint="#1769FF"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtOlvidasteContraseña"
        android:text="¿Olvidaste tu contraseña?"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16dp"
        android:textColor="#67A1FF"
        android:layout_margin="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="24dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No tienes una cuenta?"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18dp"
            android:textColor="#4D4D4D"
            android:layout_margin="3dp"
            />

        <TextView
            android:id="@+id/txtRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regístrate"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18dp"
            android:textColor="#67A1FF"
            android:layout_margin="3dp"
            />



    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/forgotPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:visibility="gone"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="#67A1FF"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/txtForgotPasswordInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa tu correo electrónico para empezar con la verificación. Enviaremos un código de 4 números."
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtForgotPassword"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/txtEmailForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electrónico"
            android:textColorHint="#A0A0A0"
            android:padding="16dp"
            android:background="@drawable/edit_text_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtForgotPasswordInstructions"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnContinueForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:background="#DFDFDF"
            android:textColor="#FFFFFF"
            android:enabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtEmailForgotPassword"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>